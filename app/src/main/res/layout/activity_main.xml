<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText

        android:id="@+id/number_edit_text"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:hint="@string/edit_text_hint"
        android:importantForAutofill="no"
        android:inputType="number"
        android:layout_alignParentTop="true"
        android:background="@drawable/edit_text_border"
        android:layout_margin="@dimen/margin_sixteen"
        android:padding="@dimen/padding_eight" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:weightSum="4"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="4">

            <Button
                android:onClick="operationFunction"
                android:id="@+id/button_one"
                android:text="@string/button_one"
                app:cornerRadius="@dimen/circle_seventy_five"
                style="@style/style_button" />

            <Button
                android:onClick="operationFunction"
                android:id="@+id/button_two"
                app:cornerRadius="@dimen/circle_seventy_five"
                style="@style/style_button"
                android:text="@string/button_two" />

            <Button
                android:onClick="operationFunction"
                android:id="@+id/button_three"
                app:cornerRadius="@dimen/circle_seventy_five"
                style="@style/style_button"
                android:text="@string/button_three" />

            <Button
                android:onClick="operationFunction"
                android:id="@+id/button_divide"
                app:cornerRadius="@dimen/circle_seventy_five"
                style="@style/style_button"
                android:text="@string/button_divide" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="4">

            <Button
                android:onClick="operationFunction"
                android:id="@+id/button_four"
                android:text="@string/button_four"
                app:cornerRadius="@dimen/circle_seventy_five"
                style="@style/style_button" />

            <Button
                android:onClick="operationFunction"
                android:id="@+id/button_five"
                app:cornerRadius="@dimen/circle_seventy_five"
                style="@style/style_button"
                android:text="@string/button_five" />


            <Button
                android:onClick="operationFunction"
                android:id="@+id/button_six"
                app:cornerRadius="@dimen/circle_seventy_five"
                style="@style/style_button"
                android:text="@string/button_six" />

            <Button
                android:onClick="operationFunction"
                android:id="@+id/button_minus"
                app:cornerRadius="@dimen/circle_seventy_five"
                style="@style/style_button"
                android:text="@string/button_minus" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="4">

            <Button
                android:onClick="operationFunction"
                android:id="@+id/button_seven"
                android:text="@string/button_seven"
                app:cornerRadius="@dimen/circle_seventy_five"
                style="@style/style_button" />

            <Button
                android:onClick="operationFunction"
                android:id="@+id/button_eight"
                app:cornerRadius="@dimen/circle_seventy_five"
                style="@style/style_button"
                android:text="@string/button_eight" />
            <Button
                android:onClick="operationFunction"
                android:id="@+id/button_nine"
                app:cornerRadius="@dimen/circle_seventy_five"
                style="@style/style_button"
                android:text="@string/button_nine" />

            <Button
                android:onClick="operationFunction"
                android:id="@+id/button_plus"
                app:cornerRadius="@dimen/circle_seventy_five"
                style="@style/style_button"
                android:text="@string/button_plus" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="4">

            <Button
                android:onClick="operationFunction"
                android:id="@+id/button_clear"
                android:text="@string/button_clean"
                app:cornerRadius="@dimen/circle_seventy_five"
                style="@style/style_button" />

            <Button
                android:onClick="operationFunction"
                android:id="@+id/button_zero"
                app:cornerRadius="@dimen/circle_seventy_five"
                style="@style/style_button"
                android:text="@string/button_zero" />

            <Button
                android:onClick="operationFunction"
                android:id="@+id/button_dot"
                app:cornerRadius="@dimen/circle_seventy_five"
                style="@style/style_button"
                android:text="@string/button_dot" />

            <Button
                android:onClick="operationFunction"
                android:id="@+id/button_equal"
                app:cornerRadius="@dimen/circle_seventy_five"
                style="@style/style_button"
                android:text="@string/button_equal" />

        </LinearLayout>


    </LinearLayout>






</RelativeLayout>